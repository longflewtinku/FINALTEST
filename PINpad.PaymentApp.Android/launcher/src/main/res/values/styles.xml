<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ui2ColorTwo</item>
        <item name="colorPrimaryDark">@color/ui2ColorTwo</item>
        <item name="colorAccent">@color/ui2ColorTwo</item>
        <item name="android:statusBarColor">@color/ui2ColorTwo</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorError">@color/colorRed</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="uiHeadlineFont">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="uiTextFont">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/interregular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/ui2ColorTwo</item>
    </style>

</resources>
