<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke android:width="2dp"
                    android:color="@color/colorGreenWoolWorths"/>

            <gradient
                android:angle="180"
                android:centerColor="@color/colorGreenWoolWorths"
                android:endColor="@color/colorGreenWoolWorths"
                android:startColor="@color/colorGreenWoolWorths"
                android:type="linear"/>

            <padding android:bottom="0dp"
                     android:left="0dp"
                     android:right="0dp"
                     android:top="0dp"/>
            <corners android:bottomLeftRadius="0dp"
                     android:bottomRightRadius="0dp"
                     android:topLeftRadius="0dp"
                     android:topRightRadius="0dp"/>

        </shape>
    </item>
</selector>
