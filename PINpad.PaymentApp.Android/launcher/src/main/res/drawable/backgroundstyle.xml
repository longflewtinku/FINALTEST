<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke android:width="1dp"
                    android:color="@color/ui2MenuButtonBorder"/>

            <gradient
                android:angle="180"
                android:centerColor="@color/ui2BgCenter"
                android:endColor="@color/ui2BgEnd"
                android:startColor="@color/ui2BgStart"
                android:type="linear"/>

            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"/>
            <corners android:bottomLeftRadius="7dp"
                     android:bottomRightRadius="7dp"
                     android:topLeftRadius="7dp"
                     android:topRightRadius="7dp"/>

        </shape>
    </item>
</selector>
