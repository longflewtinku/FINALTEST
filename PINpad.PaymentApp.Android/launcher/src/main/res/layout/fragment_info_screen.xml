<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="viewModel"
            type="com.linkly.launcher.viewmodels.InfoScreenViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/ui2BgLightStart"
        tools:context="com.linkly.launcher.InfoScreen">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      tools:context="com.linkly.payment.activities.ActMainMenu">
        </LinearLayout>


        <LinearLayout        android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:fitsSystemWindows="true"
                             android:orientation="vertical"
                             android:weightSum="2">

        <TextView
            android:id="@+id/auto_launch_notification"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:text="Auto-launching\nPayments"
            android:gravity="center_horizontal"
            tools:visibility="visible"
            android:textAppearance="@style/LargeFontDark"
            >
        </TextView>
        <ListView
            android:id="@+id/apps_list"
            style="@style/ButtonMenu"
            tools:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
        </ListView>

        <LinearLayout        android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:fitsSystemWindows="true"
                             android:orientation="vertical"
                             android:gravity="bottom"
                             android:layout_gravity="bottom"
                             android:weightSum="2">

            <GridLayout        android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:fitsSystemWindows="true"
                                 android:orientation="vertical"
                                 android:gravity="bottom"
                                 android:layout_gravity="bottom"
                                 android:background="@drawable/lightbackgroundstyle"
                                 android:weightSum="2"
                                 android:columnCount="2">

                <!-- Grid Row 1 - EFT Service -->
                <TextView
                    android:id="@+id/svcVersionLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/VERSION"
                    android:textAppearance="@style/TinyFontDarkBold"
                    />
                <TextView
                    android:id="@+id/svcVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textAppearance="@style/TinyFontDark"
                    />

                <!-- Grid Row 3 - Mal Version-->
                <TextView
                    android:id="@+id/paymentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TinyFontDarkBold"
                    android:text="@string/pay_version"
                    android:layout_row="1"
                    android:layout_column="0"/>

                    <TextView
                        android:id="@+id/payVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TinyFontDark"
                        android:text=""
                        android:layout_row="1"
                        android:layout_column="1"/>

                    <!-- Grid Row 2 - Mal Version-->
                    <!--
                    <TextView
                        android:id="@+id/malVersionlbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mal_version"
                        android:textAppearance="@style/TinyFontDarkBold"
                        android:layout_row="2"
                        android:layout_column="0"
                        />
                    <TextView
                        android:id="@+id/malVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:textAppearance="@style/TinyFontDark"/> -->

                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>