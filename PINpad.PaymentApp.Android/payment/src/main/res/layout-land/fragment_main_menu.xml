<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainMenuViewModel"
            type="com.linkly.payment.viewmodel.MainMenuViewModel" />
    </data>


    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context="com.linkly.payment.activities.ActMainMenu">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:weightSum="1">

            <!-- Branding Header -->
            <fragment
                android:id="@+id/headlines_fragment"
                android:name="com.linkly.payment.fragments.FragHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_brand_header"
                />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:background="@drawable/ui2_tabbackgroundstyle"
                app:tabTextColor="@color/ui2TabTextColour"
                app:tabSelectedTextColor="@color/colorGreenWoolWorths"
                app:tabIndicatorColor="@color/colorGreenWoolWorths"
                />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ui2_menubackgroundstyle"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>
</layout>