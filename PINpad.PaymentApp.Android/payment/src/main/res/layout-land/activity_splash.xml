<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:id="@+id/rootViewrootView"
                tools:context="com.linkly.payment.activities.ActSplash">

    <TextView
        android:id="@+id/infoTitle"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="bottom|center"
        android:text="@string/VERSION"
        android:textAppearance="@style/ui2MediumFontDark"
        android:fontFamily="@font/ui2font"
        />

    <TextView
        android:id="@+id/infoPrompt"
        android:layout_below="@+id/infoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="top|center"
        android:text=""
        android:textAppearance="@style/ui2MediumFontDark"
        android:fontFamily="@font/ui2font"
        />


    <ImageView
        android:id="@+id/splashlogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/splashlogoblank"
        android:contentDescription="@string/SPLASH_LOGO"/>


</RelativeLayout>
