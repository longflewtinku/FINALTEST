<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="fragStandardViewModel"
            type="com.linkly.payment.viewmodel.FragStandardViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <include
            layout="@layout/logo_title_view"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <include
                android:id="@+id/sale"
                layout="@layout/label_value_field"/>
            <include
                android:id="@+id/tip"
                layout="@layout/label_value_field"/>
            <include
                android:id="@+id/total"
                layout="@layout/label_value_field"/>
        </LinearLayout>

        <include
            android:id="@+id/tip_row_1"
            layout="@layout/tip_buttons"/>
        <include
            android:id="@+id/tip_row_2"
            layout="@layout/tip_buttons"/>
    </LinearLayout>

</layout>