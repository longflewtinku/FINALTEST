<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.linkly.payment.fragments.FragInfoBanner"
    android:paddingStart="0dp"
    android:paddingEnd="100dp">

    <TextView   
        android:id="@+id/info_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/ui2font"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"
        android:layout_weight="1"
        android:textAppearance="@style/ui2TinyFontLight"/>

    <TextView
        android:id="@+id/info_line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        android:fontFamily="@font/ui2font"
        android:layout_weight="1"
        android:textAppearance="@style/ui2TinyFontLight"/>

    <TextView
        android:id="@+id/info_line2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="2dp"
        android:gravity="center"
        android:fontFamily="@font/ui2font"
        android:layout_weight="1"
        android:textAppearance="@style/ui2TinyFontLight" />
    <TextView
        android:id="@+id/info_line3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="2dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/ui2font"
        android:text=""
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="@style/ui2TinyFontLight" />

</LinearLayout>