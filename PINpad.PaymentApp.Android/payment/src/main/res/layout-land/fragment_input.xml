<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragKeyboardViewModel"
            type="com.linkly.payment.viewmodel.FragKeyboardViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/uiHeadlineFont"
            android:layout_marginTop="50dp"/>


        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="0.18"
            android:gravity="center_horizontal|center"
            android:maxLines="3"
            android:text=""
            android:textAppearance="@style/uiTextFont"
            android:textColorLink="?attr/actionMenuTextColor" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_custom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:errorEnabled="true">


            <com.linkly.libui.views.CustomEditText
                android:id="@+id/txtInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ui2_edittextstyle"
                android:ems="10"
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLines="1"
                android:textAppearance="@style/uiEditTextFont"
                android:layout_marginTop="20dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/skip_button"
            android:layout_width="@dimen/question_skip_width"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:layout_marginTop="@dimen/button_padding_top"
            android:background="@drawable/ui2_buttonstyle"
            android:fontFamily="@font/ui2font"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:text="@string/SKIP"
            android:textAppearance="@style/ui2MediumFontDark" />

    </LinearLayout>
</layout>
