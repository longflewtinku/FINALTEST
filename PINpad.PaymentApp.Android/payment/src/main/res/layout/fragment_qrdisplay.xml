<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="fragStandardViewModel"
            type="com.linkly.payment.viewmodel.FragStandardViewModel" />
    </data>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/appbar_padding_top"
        android:background="@android:color/white">

        <!-- Branding Header -->

        <fragment
            android:id="@+id/headlines_fragment"
            android:name="com.linkly.payment.fragments.FragHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_brand_header"/>


        <!-- LED Bar for Contactless -->
        <fragment
            android:id="@+id/ctls_leds_frag"
            android:layout_below="@id/headlines_fragment"
            android:name="com.linkly.payment.fragments.FragLed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_leds"/>

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:text=""
            android:visibility="visible"
            android:textAppearance="@style/ui2LargeFontDark"
            android:fontFamily="@font/ui2fontbold"
            />

        <TextView
            android:id="@+id/infoPrompt"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/infoTitle"
            android:layout_above="@+id/bottomHalf"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:gravity="center|top"
            android:text="Line 1\nLine 2\nLine 3"
            android:textAppearance="@style/ui2MediumSmallFontBlue"
            android:fontFamily="@font/ui2font"/>

        <LinearLayout
            android:id="@+id/bottomHalf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/bg_color"
                android:layout_width="285dp"
                android:layout_height="285dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <ProgressBar
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminateTint="@android:color/white"
                android:indeterminateTintMode="src_in"
                android:indeterminate="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ProgressBar>


            <TextView
                android:id="@+id/paddingPrompt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="0dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=""
                android:visibility="gone"
                android:textAppearance="@style/ui2MediumFontDark"
                android:fontFamily="@font/ui2font"/>

        </LinearLayout>
    </RelativeLayout>


</layout>