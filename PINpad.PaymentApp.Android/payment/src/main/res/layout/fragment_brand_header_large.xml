<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@id/main_content"
    tools:context="com.linkly.payment.fragments.FragHeader">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/ui2ColorThree"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_for_symmetry"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:contentDescription="Menu"
            android:src="@drawable/btn_hamburger"
            android:visibility="invisible" />

            <!-- Branding Image -->
        <ImageView
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/menu_but"
            android:layout_toEndOf="@+id/button_for_symmetry"
            android:src="@drawable/logo_linkly"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/menu_but"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:contentDescription="Menu"
            android:src="@drawable/btn_hamburger" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/batch_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="3dp"
        android:layout_marginBottom="10dp"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ui2batchindi">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/database"/>

            <TextView
                android:id="@+id/batch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ui2TinyFontLight"
                android:text="@string/_0"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_below="@+id/logo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/WELCOME"
            android:gravity="center"
            android:textAppearance="@style/uiHeadlineFont" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/uiTextFont"
            tools:text="Tuesday, December 31" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/logo"
        android:paddingStart="10dp"
        android:paddingEnd="1dp"
        android:paddingTop="1dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ui2_lowbattery">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:paddingEnd="0dp"
                android:paddingStart="2dp"
                android:src="@mipmap/battery"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="@string/BATTERY_LOW"
                android:textAppearance="@style/ui2TinyFontLight"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
