<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <Button
        android:id="@+id/tip_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="20dp"
        android:background="@drawable/ui2_buttonstyle_tip"
        android:textAppearance="@style/uiTipBtn"
        app:layout_constraintEnd_toStartOf="@id/tip_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/OK" />

    <Button
        android:id="@+id/tip_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="20dp"
        android:layout_toEndOf="@id/tip_1"
        android:background="@drawable/ui2_buttonstyle_tip"
        android:textAppearance="@style/uiTipBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tip_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/OK" />

    <Button
        android:id="@+id/tip_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:paddingVertical="20dp"
        android:background="@drawable/ui2_buttonstyle_tip"
        android:textAppearance="@style/uiTipBtn"
        app:layout_constraintTop_toBottomOf="@id/tip_1"
        app:layout_constraintEnd_toStartOf="@id/tip_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/OK" />

    <Button
        android:id="@+id/tip_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:paddingVertical="20dp"
        android:background="@drawable/ui2_buttonstyle_tip"
        android:textAppearance="@style/uiTipBtn"
        app:layout_constraintStart_toEndOf="@id/tip_3"
        app:layout_constraintTop_toBottomOf="@id/tip_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/OK" />
</androidx.constraintlayout.widget.ConstraintLayout>