<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">


    <TextView
        android:id="@+id/row_trans_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ui2fontbold"
        android:gravity="center|center_vertical"
        android:textAppearance="@style/ui2LargeFontDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_trans_receipt_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/row_trans_type"
        android:fontFamily="@font/ui2font"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/ui2LargeFontDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/row_trans_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/row_trans_receipt_no"
        android:fontFamily="@font/ui2font"
        android:gravity="right|center_vertical"
        android:textAppearance="@style/ui2LargeFontDark"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/row_trans_status_image"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_below="@+id/row_trans_type"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|center_horizontal" />


    <TextView
        android:id="@+id/row_trans_status"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/row_trans_amount"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/row_trans_status_image"
        android:fontFamily="@font/ui2font"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/ui2LargeFontDark"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/row_btn_resubmit_declined"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/row_trans_amount"
        android:layout_alignParentRight="true"
        android:background="@drawable/ui2_buttonstyle_light"
        android:fontFamily="@font/ui2font"
        android:gravity="center_vertical|center_horizontal"
        android:text="Re-Submit"
        android:textAppearance="@style/ui2MediumBtnFont"
        android:layout_margin="@dimen/button_margin"
        android:textAllCaps="false"
        android:textSize="18sp" />

</RelativeLayout>