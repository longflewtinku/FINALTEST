<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.linkly.payment.fragments.FragInfoBanner">

    <TextView
        android:id="@+id/info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/ui2font"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textAppearance="@style/ui2TinyFontLight" />

    <TextView
        android:id="@+id/info_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_header"
        android:layout_alignStart="@+id/info_header"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="2dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/ui2font"
        android:text=""
        android:textAppearance="@style/ui2TinyFontLight" />

    <TextView
        android:id="@+id/info_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_line1"
        android:layout_alignStart="@+id/info_line1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="2dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/ui2font"
        android:text=""
        android:textAppearance="@style/ui2TinyFontLight" />
    <TextView
        android:id="@+id/info_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_line2"
        android:layout_alignStart="@+id/info_line2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="2dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/ui2font"
        android:text=""
        android:textAppearance="@style/ui2TinyFontLight" />

</RelativeLayout>