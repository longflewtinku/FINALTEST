<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:context="com.linkly.payment.fragments.FragMoto">


    <LinearLayout
        android:id="@+id/moto_info_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="14dp"
        android:orientation="vertical"
        android:visibility="visible">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ui2ColorThree"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="CSC:"
                android:layout_row="0"
                android:layout_column="0"
                android:textAppearance="@style/ui2MediumFontDark"/>

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@mipmap/matchnotchecked"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="House:"
                android:layout_row="1"
                android:layout_column="0"
                android:textAppearance="@style/ui2MediumFontDark"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:src="@mipmap/matchnotchecked"/>


            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="Postcode:"
                android:layout_row="2"
                android:layout_column="0"
                android:textAppearance="@style/ui2MediumFontDark"/>

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:src="@mipmap/matchnotchecked"/>


    </GridLayout>
    </LinearLayout>
</RelativeLayout>
